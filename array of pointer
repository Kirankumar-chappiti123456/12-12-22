char array of pointer:


#include <stdio.h>
int main()
{
    char *color[3]={"red","blue","yellow"};
    int i=0;
    for(i=0;i<3;i++)
    {
        printf("%s",color[i]);
    }
}

using the macros and 

#include <stdio.h>
#define M 3
int main()
{
    char *color[M]={"red","blue","yellow"};
    printf("%s",color[0]);
    printf("%s",color[1]);
    printf("%s",color[2]);
    
   
}


