#include<stdio.h>
#include<string.h>
int main()
{
    char str[]={"i work at thunder"};
    char word[10][10],large[10],small[10];
    int i=0,j=0,k=0,length=0;
    
    for(k=0;str[k]!='\0';k++)
    {
        if(str[k]!=' ' && str[k]!='\0')
        {
         word[i][j++]=str[k];   
        }
    
    else 
    {
    word[i][j]='\0';
    i++; 
    j=0; 
    }
    }
    length=i+1;
    strcpy(large,word[0]);
    strcpy(small,word[0]);
    for(k=0;k<length;k++)
    {
        if(strlen(large)<strlen(word[k]))
        {
            strcpy(large,word[k]);
        }
    
        if(strlen(small)>strlen(word[k]))
        {
            strcpy(small,word[k]);
        }
    }
    printf("%s\n",large);
    printf("%s\n",small);
    int l=strlen(large);
    int l1=strlen(small);
    printf("%d\n",l);
     printf("%d",l1);
    
    
}
